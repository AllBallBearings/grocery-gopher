{
  "manifest_version": 3,
  "name": "Grocery Gopher",
  "version": "1.0",
  "description": "Do some shoppin', buuuuuudy!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.harristeeter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}
